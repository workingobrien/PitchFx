<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <appSettings>
    <add key="server" value="localhost"/>
    <add key="database" value="pitchfx"/>
    <add key="uid" value="root"/>
    <add key="password" value="password"/>
    <add key="baseSaveDirectory" value="C:\game\mlb\"/>
  </appSettings>
  <log4net debug="false">
    <appender name="basicLog" type="log4net.Appender.RollingFileAppender,log4net">
      <param name="File" value="C:\Apps\PitchFx\logs\log"/>
      <param name="AppendToFile" value="true"/>
      <param name="RollingStyle" value="Date"/>
      <param name="DatePattern" value=".yyyyMMdd.\t\x\t"/>
      <param name="StaticLogFileName" value="false"/>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{HH:mm:ss:fff}[%thread](%-5p) %m%n"/>
      </layout>
    </appender>
    <root>
      <level value="INFO"/>
      <appender-ref ref="basicLog"/>
    </root>
  </log4net>
  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="netTcpBindingWithNoSecurity">
          <security mode="None"/>
        </binding>
      </netTcpBinding>
    </bindings>
    <services>
      <service behaviorConfiguration="serviceBehavior" name="PitchFx.Implement.Service.PitchFxService">
        <endpoint binding="netTcpBinding" contract="PitchFx.Contract.Interface.IPitchFxService" bindingConfiguration="netTcpBindingWithNoSecurity" address=""/>
        <endpoint address="Mex" binding="mexTcpBinding" contract="IMetadataExchange"/>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8600/PitchFxLoader"/>
            <add baseAddress="http://localhost:8601/PitchFxLoader"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="serviceBehavior">
          <serviceMetadata httpGetEnabled="True"/>
          <serviceDebug httpHelpPageEnabled="true" includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  <system.data>
    <DbProviderFactories>
      <remove invariant="MySql.Data.MySqlClient" />
      <add name="MySQL Data Provider" invariant="MySql.Data.MySqlClient" description=".Net Framework Data Provider for MySQL" type="MySql.Data.MySqlClient.MySqlClientFactory, MySql.Data, Version=6.9.6.0, Culture=neutral, PublicKeyToken=c5687fc88969c44d" />
    </DbProviderFactories>
  </system.data>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>